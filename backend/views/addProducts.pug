doctype html
html(lang="en")
    head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Products List
    link(rel="stylesheet" href="/css/styles.css")
    body
    include partials/header
    block content
    h1 Products List
    ul
        .product-container
        form(action="/products/create" method="POST")
            label(for="productName") Product Name:
            input(type="text" id="productName" name="productName" required)
            br
            label(for="productDescription") Product Description:
            input(type="text" id="productDescription" name="productDescription" required)
            br
            label(for="productImage") Product Image URL:
            input(type="text" id="productImage" name="productImage" required)
            br
            label(for="stock") Product Stock:
            input(type="number" id="stock" name="stock" required)
            br
            label(for="price") Price: $
            input(type="number" id="price" name="price" required)
            br
            button(type="submit") Add Product